page {
  background: #edecec;
}

.rollHeader {
  width: 750rpx;
  height: 84rpx;
  background: #222324;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
}

.rollMask {
  width: 750rpx;
  position: fixed;
  left: 0;
  top: 84rpx;
  z-index: 100;
}

.rollPlay {
  width: 750rpx;
  position: fixed;
  left: 0;
  top: 182rpx;
  z-index: 100;
  transition: all .4s;
}

.rollHeader .search {
  height: 84rpx; 
  width: 80%;
  float: left;
  position: relative;
}

.rollHeader .search input {
  width: 80%;
  position: absolute;
  height: 56rpx;
  top: 13rpx;
  left: 10%;
  border: 1rpx #707070 solid;
  border-radius: 24rpx;
  color: #fff;
  padding-left: 20rpx;
}

.rollHeader .search view {
  width: 66rpx;
  height: 56rpx;
  position: absolute;
  top: 15rpx;
  right: 50rpx;
  background: url(https://vip-roll.oss-cn-hangzhou.aliyuncs.com/mobile/static/roll/images/seacher.png) no-repeat center center;
  background-size: 40rpx;
}

.rollHeader .create {
  width: 84rpx;
  height: 84rpx;
  margin-right: 10rpx;
  background: url(https://vip-roll.oss-cn-hangzhou.aliyuncs.com/mobile/static/roll/images/creat_roll.png) no-repeat center center;
  background-size: 46rpx 46rpx;
  float: right;
}

.rollMask {
  background: #fff;
  height: 96rpx;
  border-bottom: 1.4rpx #eee solid;
}

.rollMask > view {
  position: relative;
  width: 50%;
  float: left;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 26rpx;
  text-align: center;
  color: #9fa0a0;
}

.rollMask .line{
  position: absolute;
  width: 2rpx;
  height: 50rpx;
  background: #eee;
  right: 0;
  top: 23rpx;
}

.rollMask .active{
  color: #ee7142;
  font-weight: bold;
}

.rollPlay {
  height: 90rpx;
  width: 100%;
  box-shadow: 0 6rpx 6rpx rgba(10,10,10,0.2);
  background: #fff;
}

.rollPlay > view {
  width: 33.33%;
  float: left;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 24rpx;
  color: #9fa0a0;
}

.rollPlay .select {
  color: #ee7142;
  font-weight: bold;
}

/* swiper 高度无法 auto  初始设置1000， 后面根据实际加载条目 动态更改height  */
swiper {
  height: 2000rpx;
  margin-top: 186rpx;
}

swiper-item {
  margin-top: 92rpx;
}

swiper-item:nth-of-type(1) {
  margin-top: 0;
}

.room {
  width: 670rpx;
  padding: 18rpx;

  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 0 4rpx 2rpx rgba(140,140,140,.3); 
  margin: 28rpx auto 0;
}

.room .title {
  height: 84rpx;
}

.room .title image {
  width: 84rpx;
  height: 84rpx;
  float: left;
}

.room .title :nth-child(2){
  float: right;
  width: 530rpx;
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  text-overflow: ellipsis;
}

.room .title :nth-child(3){
  float: right;
  width: 530rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #666;
}

.room .img {
  margin: 20rpx auto;
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.room .img view {
  width: 158rpx;
  height: 98rpx;
  background: url(https://vip-roll.oss-cn-hangzhou.aliyuncs.com/mobile/static/roll/images/csgo_info_bg.jpg) no-repeat center center;
  background-size: 158rpx;
}

.room .img image {
  width: 100%;
  height: 100%;
}

.room .info > view {
  height: 44rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
}

.room .info .note {
  border-top: 2rpx #eee solid;
  margin-top: 18rpx;
  padding-top: 10rpx;
}

.room .info > view span{
  color: #555;
}

.room .info > view:nth-of-type(2) span{
  color: #e32a25;
}

.bingo {
  position: reletive;
}

.bingo .get {
  position: absolute;
  width: 170rpx;
  height: 66rpx;
  border-radius: 14rpx;
  color: #ee7142;
  border: 1.4rpx #ee7142 solid;
  right: 56rpx;
}

.bingo .get :nth-child(1){
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  background: url(https://roll.steampp.com/mobile/static/roll/images/roll_key.png) no-repeat 18rpx center;
  background-size: 20rpx;
  text-indent: 20rpx;
}

.bingo .get :nth-child(2){
  height: 30rpx;
  line-height: 30rpx;
  font-size: 20rpx;
}