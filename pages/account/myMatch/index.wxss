.Bg {
  background: url(https://match.steampp.com/mobile/static/user/images/header_bj.jpg) no-repeat center center;
  background-size: cover;
  width: 100%;
  height: 300rpx;
  padding-top: 100rpx;
  color: #b9becd;
}

.BgTitle {
  height: 64rpx;
  line-height: 64rpx;
  border-bottom: 1.4rpx solid rgba(255,255,255,0.2);
  text-align: center;
}

.BgTitle > view {
  float: left;
  font-size: 24rpx;
}

.BgTitle view:nth-of-type(1){
  width: 60%;
}

.BgTitle view:nth-of-type(2){
  font-size: 42rpx;
  width: 18%;
  color: #e9bc38;
  text-align: right;
}

.BgTitle view:nth-of-type(3){
  width: 10%;
  color: #e9bc38;
}

.BgTitle view:nth-of-type(4){
  width: 12%;
}

.BgDataLeft {
  display: flex;
  width: 60%;
  height: 224rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  float: left;
}

.BgDataLeft > view {
  width: 48%;
  padding-top: 25rpx;
  text-align: center;
  font-size: 22rpx;
}

.BgDataLeft > view text {
  font-size: 26rpx;
  color: #fff;
}

.BgDataLeft > view view {
  height: 46rpx;
  line-height: 46rpx;
}

.BgDataLeft .borBtm {
  border-bottom: 2.8rpx solid rgba(251,251,251,0.2);
}

.BgDataLeft .borRt {
  position: relative
}

.borRt:after {
  content: "";
  position: absolute;
  width: 2.8rpx;
  height: 60rpx;
  top: 30rpx;
  right: 0;
  background: rgba(251,251,251,0.3);
}

.BgDataRight {
  float: left;
  width: 40%;
  height: 224rpx;
}

.BgDataRight .title {
  height: 40rpx;
  padding-top: 30rpx;
  line-height: 40rpx;
}

.BgDataRight .title > view {
  width: 20%;
  float: left;
  font-size: 26rpx;
  position: relative;
}

.BgDataRight .title :nth-child(1) {
  left: 110rpx;
}

.BgDataRight .title :nth-child(2) {
  left: 120rpx;
}

.BgDataRight .title .sel {
  color: #fff;
  border-bottom: 2.8rpx solid #fff;
}

.cvs {
  width: 148rpx;
  height: 148rpx;
  margin: 10rpx 0 0 105rpx;
  position: relative;
}

.cvs .cvsBox {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 148rpx;
  transition: all .6s;
}

.cvsBox canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.cvsBox .dataRate {
  width: 100%;
  height: 90rpx;
  padding-top: 30rpx;
}

.dataRate view {
  height: 36rpx;
  width: 100%;
  line-height: 36rpx;
  font-size: 22rpx;
  text-align: center;
}

.dataRate :nth-child(1){
  color: #fff;
  font-size: 26rpx;
}