.common-header > .signIn {
  background-image: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/mobile/static/account/index/images/qd.png);
  width: 88rpx;
  height: 84rpx;
  line-height: 98rpx;
  position: fixed;
  top: 0;
  right: 10rpx;
  background-size: contain;
  background-position: center center;
  font-size: 20rpx;
}

.images {
  position: relative;
  height: 406rpx;
}

.images > view {
  position: absolute;
  left: 50%;
  width: 50%;
  margin-left: -25%;
  z-index: 20;
}

.images > .imagesBg {
  position: absolute;
  top: 0;
  left: 0;
  margin-left: 0;
  width: 100%;
  height: 434rpx;
  background: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/files/171009/X00068F9.jpg) no-repeat center center;
  filter: blur(5rpx) brightness(.5);
  background-size: cover;
  z-index : 10;
}

.images > .imagesPhoto {
  width: 144rpx;
  height: 144rpx;
  margin-left: -72rpx;
  top: 110rpx;

}

.images > .imagesPhoto  image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}

.images > .userName {
  font-size : 28rpx;
  height: 52rpx;
  line-height: 52rpx;
  top : 255rpx;
}

.images > .userLevel {
  font-size: 21rpx;
  top: 320rpx;
  height: 34rpx;
  width: 120rpx;
  line-height: 34rpx;
  margin-left: -60rpx;
  background: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/mobile/static/account/global/level/lvl_1.png) no-repeat center center;
  background-size: auto 33rpx;
}

.userData, .dataTransf {
  display : flex;
  flex-direction : row;
  flex-wrap : nowrap;
  align-items : flex-start;
  justify-content : center;
  width: 100%;
}

.userData > view {
  width: 31%;
  height: 150rpx;
  border-bottom: 0.7rpx solid #eee;
}

.userData > view text {
  font-size: 42rpx;
  position: relative;
  top: 42rpx;
}

.silverIn, .inventoryIn, .moneyIn {
  position: relative;
  top: 40rpx;
  font-size: 24rpx;
}

.sliver {
  color: #555;
}
.silverIn {
  color: #999;
}

.inventory {
  color: #47a4ff;
}

.money {
  color: #e9bc38;
}

.dataTransf > view {
  width: 32%;
  height: 70rpx;
  color: #717481;
  line-height: 70rpx;
  font-size: 26rpx;
  text-indent: 30rpx;
  background-repeat: no-repeat;
  background-position: 40rpx center;
  background-size: 32%;
}

.silTransf {
  background-image: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/mobile/static/account/index/images/urs_ic1.png)
}
.access {
  background-image: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/mobile/static/account/index/images/urs_ic2.png)
}
.recharge {
  background-image: url(https://vip-account.oss-cn-hangzhou.aliyuncs.com/mobile/static/account/index/images/urs_ic3.png)
}

